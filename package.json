{
  "name": "ninjaone-mcp-server",
  "version": "1.3.0",
  "description": "Modern MCP server for NinjaONE RMM platform with HTTP/SSE support",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:stdio": "MCP_MODE=stdio node dist/index.js",
    "start:http": "MCP_MODE=http node dist/index.js",
    "start:sse": "MCP_MODE=sse node dist/index.js",
    "test": "node dist/test.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.9.0",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "mcp",
    "ninja",
    "rmm",
    "monitoring",
    "http",
    "sse"
  ],
  "author": "Claude Assistant",
  "license": "MIT"
}
